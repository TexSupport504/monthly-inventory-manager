  "installation_guide": {
    "steps": [
      "1. Open Power BI Desktop",
      "2. Go to Visualizations pane",
      "3. Click the three dots (...) for 'Get more visuals'",
      "4. Select 'Get more visuals' from dropdown",
      "5. Search for each visual by name",
      "6. Click 'Add' to install",
      "7. Visual will appear in your visualizations pane"
    ],
    "alternative_method": [
      "1. Visit the download URLs provided",
      "2. Click 'Get it now' on AppSource",
      "3. Sign in with Power BI account",
      "4. Visual will be added to your account automatically"
    ]
