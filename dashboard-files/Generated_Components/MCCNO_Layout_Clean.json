{
  "dashboard_name": "MCCNO Executive Inventory Dashboard",
  "version": "1.0",
  "brand_theme": "MCCNO_Executive",
  
  "canvas": {
    "width": 960,
    "height": 800,
    "margin": 20
  },

  "pages": [
    {
      "name": "Executive Overview",
      "page_number": 1,
      "layout": {
        "header": {
          "height": 120,
          "background": "#003366"
        },
        "kpi_row": {
          "height": 100,
          "cards": 4
        },
        "main_content": {
          "height": 680
        },
        "footer": {
          "height": 180
        }
      },
      "visuals": [
        {
          "name": "GMROI Card",
          "type": "card",
          "measure": "GMROI",
          "position": { "x": 0, "y": 120, "width": 240, "height": 100 }
        },
        {
          "name": "Revenue Card",
          "type": "card", 
          "measure": "Total_Revenue",
          "position": { "x": 240, "y": 120, "width": 240, "height": 100 }
        },
        {
          "name": "Sell Through Card",
          "type": "card",
          "measure": "Sell_Through_Rate", 
          "position": { "x": 480, "y": 120, "width": 240, "height": 100 }
        },
        {
          "name": "Days Supply Card",
          "type": "card",
          "measure": "Days_of_Supply",
          "position": { "x": 720, "y": 120, "width": 240, "height": 100 }
        },
        {
          "name": "Revenue Waterfall",
          "type": "waterfall",
          "measure": "Total_Revenue",
          "position": { "x": 0, "y": 220, "width": 576, "height": 400 }
        },
        {
          "name": "Risk Alert Panel",
          "type": "table",
          "data": "Risk_Alerts",
          "position": { "x": 576, "y": 220, "width": 384, "height": 400 }
        }
      ]
    },

    {
      "name": "Event Impact Analysis", 
      "page_number": 2,
      "visuals": [
        {
          "name": "Event Performance Matrix",
          "type": "scatter",
          "x_axis": "est_attendance",
          "y_axis": "actual_revenue", 
          "position": { "x": 0, "y": 120, "width": 480, "height": 300 }
        },
        {
          "name": "Inventory-Sales Correlation",
          "type": "combo",
          "bars": "Pre_Event_Inventory",
          "line": "Sales",
          "position": { "x": 480, "y": 120, "width": 432, "height": 300 }
        },
        {
          "name": "Conversion Funnel",
          "type": "funnel", 
          "stages": 4,
          "position": { "x": 0, "y": 420, "width": 432, "height": 300 }
        },
        {
          "name": "Before/After Analysis",
          "type": "column",
          "comparison": "before_after",
          "position": { "x": 432, "y": 420, "width": 480, "height": 300 }
        }
      ]
    },

    {
      "name": "Inventory Intelligence",
      "page_number": 3, 
      "visuals": [
        {
          "name": "Stock Level Heat Map",
          "type": "matrix",
          "rows": "category",
          "columns": "location", 
          "position": { "x": 0, "y": 120, "width": 960, "height": 200 }
        },
        {
          "name": "Reorder Dashboard",
          "type": "table",
          "data": "Reorder_Dashboard",
          "position": { "x": 0, "y": 320, "width": 576, "height": 300 }
        },
        {
          "name": "Safety Stock Performance", 
          "type": "gauge",
          "measure": "Service_Level",
          "position": { "x": 576, "y": 320, "width": 336, "height": 150 }
        },
        {
          "name": "Shrink Detection Monitor",
          "type": "line",
          "measure": "Shrink_Variance_Percent",
          "position": { "x": 576, "y": 470, "width": 336, "height": 150 }
        }
      ]
    },

    {
      "name": "Financial Performance",
      "page_number": 4,
      "visuals": [
        {
          "name": "Category P&L Analysis", 
          "type": "stacked_bar",
          "categories": ["Promotional", "Apparel", "Packaging", "Shipping"],
          "position": { "x": 0, "y": 120, "width": 960, "height": 200 }
        },
        {
          "name": "GMROI Trending",
          "type": "line",
          "measure": "GMROI", 
          "target": 3.0,
          "position": { "x": 0, "y": 320, "width": 576, "height": 300 }
        },
        {
          "name": "Working Capital Optimization",
          "type": "scatter",
          "x_axis": "Days_of_Supply",
          "y_axis": "Cash_Flow",
          "position": { "x": 576, "y": 320, "width": 336, "height": 150 }
        },
        {
          "name": "Investment Planning",
          "type": "table", 
          "data": "Investment_Planning",
          "position": { "x": 576, "y": 470, "width": 336, "height": 150 }
        }
      ]
    }
  ],

  "filters": [
    {
      "name": "Time Period",
      "type": "slicer",
      "field": "Date[MonthName]",
      "position": "top"
    },
    {
      "name": "Event Type", 
      "type": "slicer",
      "field": "Events[event_type]",
      "position": "top"
    },
    {
      "name": "Category",
      "type": "slicer",
      "field": "Inventory[category]", 
      "position": "top"
    },
    {
      "name": "Location",
      "type": "slicer", 
      "field": "Inventory[location]",
      "position": "top"
    }
  ]
}
